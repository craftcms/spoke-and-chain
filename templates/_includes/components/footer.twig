<!-- Template: {{ _self }}.twig -->
{# Variables #}
{% set footerNav = footer.footerNav|length ? footer.footerNav.all() : [] %}

{# Output #}
<footer>
    <div class="container">
        <div class="mt-8 py-8">
            {% if footerNav|length %}
                <div class="pb-8 xl:grid xl:grid-cols-5 xl:gap-8">
                    <div class="grid grid-cols-2 gap-8 xl:col-span-4">
                        <div class="md:grid md:grid-cols-2 md:gap-8">
                            {% for col in footerNav|slice(0, 2) %}
                                {% include '_includes/components/footer/column' with { col: col } %}
                            {% endfor %}
                        </div>
                        {% if footerNav|length > 2 %}
                            <div class="md:grid md:grid-cols-2 md:gap-8">
                                {% for col in footerNav|slice(2, 2) %}
                                    {% include '_includes/components/footer/column' with { col: col } %}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="mt-12 xl:mt-0 space-y-4">
                        <h4 class="text-sm leading-5 font-semibold text-gray-600 tracking-wider uppercase">
                            {{ footer.subheading }}
                        </h4>
                        <form class="mt-4 space-y-4 sm:max-w-xs">
                            <fieldset class="w-full">
                                <label for="language" class="sr-only">{{ 'Language'|t }}</label>
                                {% include '_includes/components/forms/select' with {
                                  options: [
                                    { value: 'en', label: 'English', selected: true },
                                    { value: 'de', label: 'German' },
                                    { value: 'fr', label: 'French' },
                                  ]
                                } %}
                            </fieldset>
                        </form>

                        {% include '_includes/components/modal' %}
                    </div>
                </div>
            {% endif %}
            <div class="mt-8 border-t border-gray-200 pt-8 md:flex md:items-center md:justify-between">
                <div class="flex space-x-6 md:order-2">
                    <a href="https://github.com/pixelandtonic/spoke-and-chain" rel="external" class="text-gray-600 hover:text-gray-500">
                        <span class="sr-only">GitHub</span>
                        <svg class="h-6 w-6" aria-hidden="true" fill="currentColor"
                             viewBox="0 0 24 24">
                            <path fill-rule="evenodd"
                                  d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </a>
                </div>
                <p class="mt-8 text-base leading-6 text-gray-600 md:mt-0 md:order-1">
                    &copy; {{ now|date('Y') }} {{ footer.heading }}
                </p>
            </div>
        </div>
    </div>
</footer>