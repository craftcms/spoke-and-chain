{# Params #}
{% set block = block is not defined ? false : block %}
{% set isFirst = isFirst is not defined ? false : isFirst %}
{% set isLast = isLast is not defined ? false : isLast %}
{% set image = block ? block.image.one() : null %}

{% if block and image %}
  <!-- Template: {{ _self }}.twig -->
  <div class="aspect-ratio-hero">
    <div class="aspect-inner overflow-hidden relative">
      <img class="absolute transform left-1/2 top-1/2 -translate-y-1/2 -translate-x-1/2 w-full" src="{{ image.url }}" alt="{{ image.title }}">
    </div>
  </div>
{% endif %}