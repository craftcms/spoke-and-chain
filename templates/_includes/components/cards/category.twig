<!-- Template: {{ _self }}.twig -->
{# Params #}
{% set title = title is not defined ? null : title %}
{% set image = image is not defined ? null : image %}
{% set url = url is not defined ? null : url %}

{# Output #}
{% if title or image %}
  {% if url %}
    <a class="aspect-ratio-category-card" href="{{ url }}" aria-label="{{ title }}">
  {% else %}
    <div class="aspect-ratio-category-card">
  {% endif %}
    <div class="aspect-inner bg-cover bg-center" style="background-image: url(https://www.specialized.com/medias/ROAD-3663-Aethos-Home-SubHero-1320x880.jpg?context=bWFzdGVyfGltYWdlc3wyMzk4OTB8aW1hZ2UvanBlZ3xpbWFnZXMvaGM0L2g1Ny85MjI1ODM4MTY2MDQ2LmpwZ3xiOWQ1ZTkyN2YxMTBlMGVlOTg1MDM3ZDRkZGQ1NWFiZjc0ZTgxODgxYmEzOTU4ZTVjZWYwN2MxZGIzMDg4Y2Fi)">
      <div class="flex items-center justify-center h-full w-full text-2xl font-bold text-white">
        {{ title }}
      </div>
    </div>
  {% if url %}
    </a>
  {% else %}
    </div>
  {% endif %}
{% endif %}
