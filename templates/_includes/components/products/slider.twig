{% set id = id is not defined ? 'slider-' ~ random() : id %}
{% set images = images is not defined ? [] : images %}

{% if images|length %}
  <!-- Template: {{ _self }}.twig -->
<div class="py-8 lg:py-16">
  <div class="aspect-ratio-hero">
    <div class="aspect-inner overflow-hidden relative" x-ref="container">
      <div id="{{ id }}" class="absolute top-0 left-0 w-full h-full swiper-container" data-slider='{"navigation": { "nextEl": ".swiper-button-next", "prevEl": ".swiper-button-prev"} }'>
        <div class="swiper-wrapper">
          {% for image in images %}
            <div class="swiper-slide flex justify-center items-center">
              <img class="block h-full" src="{{ image.url }}" alt="{{ image.title }}">
            </div>
          {% endfor %}
        </div>

        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    </div>
  </div>
</div>
{% endif %}
