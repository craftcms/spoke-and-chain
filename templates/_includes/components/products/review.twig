{% set review = review is not defined ? null : review %}

{% if review %}
  <!-- Template: {{ _self }}.twig -->
  <div>
    <div><strong>{{ review.title }}</strong></div>
    <div class="text-gray-500">{{ review.postDate|date('F j, Y') }}</div>
    <div class="mt-1 flex text-yellow-500">
      {% for i in range(1, 5) %}
        {{ svg('@webroot/icons/star'~ (i > review.stars ? '-line' ) ~'.svg')|attr({ class: 'w-4 h-4' }) }}
      {% endfor %}
    </div>

    <div class="mt-4">
      {{ review.body }}
    </div>
  </div>
{% endif %}
