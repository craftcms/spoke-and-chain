<!-- Template: {{ _self }}.twig -->
{# Variables #}
{% set showNav = showNav is not defined ? true : showNav %}

{# Output #}
<header class="py-3 text-lg font-medium border-b border-solid border-gray-200">
  <div class="container">
    <div class="flex w-full justify-between items-center">
      <div class="w-1/4 flex items-center">
        <a
          title="{{ siteName }}"
          class="inline-block px-4 py-2 text-black hover:text-red-600"
          href="/">{{ svg('@webroot/icons/logo.svg')|attr({ class: 'fill-current' }) }}</a>
      </div>

      {% if showNav %}
        {% include '_includes/components/nav' with {} only %}
      {% endif %}

      <div class="w-1/4 flex justify-end items-center">
        <div class="flex items-center">
          <div class="flex">
              <a class="inline-block px-4 py-2 text-black hover:text-red-600" href="#">
                  {{ svg('@webroot/icons/search.svg')|attr({ class: 'w-6 h-6' }) }}
              </a>
          </div>

          {% include '_includes/components/cart-menu' %}
        </div>
      </div>
    </div>
  </div>
</header>
