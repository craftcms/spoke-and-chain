{% set cartPage = craft.entries({ section: 'checkout', type: 'cart' }).one() %}

{# End Params #}
{% block header %}
  <!-- Site/Header -->
  {% include '_includes/components/header' with {
    showNav: true
  } %}
{% endblock %}

{% block main %}
  <!-- Site/Main -->
  {% block content %}{% endblock %}
{% endblock %}

{% block footer %}
  <!-- Site/Footer -->
  {% include '_includes/components/footer' with { footer: footer } only %}
{% endblock %}