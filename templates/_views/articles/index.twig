{# Layout #}
{% extends '_layouts/site' %}

{% spaceless %}
  {# Variables #}
  {% set featuredArticle = craft.entries({
    section: 'articles',
  }).first() %}
  {% set articles = craft.entries({
    section: 'articles',
    offset: 1
  }).all() %}
{% endspaceless %}

{# Blocks #}
{% block content %}
  <div class="bg-gray-200 py-8">
    {# Heading #}
    <div class="container">
      <h1 class="text-center">{{ entry.title }}</h1>
    </div>

    {# Article List #}
    <div class="container mt-8">
      <div>
        {% include '_includes/components/cards/article' with {
          title: featuredArticle.title,
          url: featuredArticle.url,
          horizontal: true
        } only %}
      </div>

      <div class="flex flex-wrap -mx-2 -mb-2 mt-4">
        {% for article in articles %}
          <div class="w-full md:w-1/2 xl:w-1/3 px-2 pb-2">
            {% include '_includes/components/cards/article' with {
              title: article.title,
              url: article.url
            } only %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}