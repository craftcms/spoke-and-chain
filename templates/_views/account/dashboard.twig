{% requireLogin %}

{# Layout #}
{% extends '_layouts/site' %}

{# Blocks #}
{% block content %}
  <!-- Template: {{ _self }}.twig -->
  <div class="bg-gray-100 py-8 px-6">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl text-center">Your Account</h1>
      <div class="mt-16 md:grid md:grid-cols-3 md:gap-12">
        <div>
          <h2 class="text-2xl">Orders</h2>
          <div class="mt-2">Track, modify, or cancel an order, or make a return.</div>
          <ul class="mt-2">
            <li>
              <a href="{{ url('account/orders') }}">
                See your orders
                {{ svg('@webroot/icons/chevron-right.svg')|attr({ class: 'w-4 h-4' }) }}
              </a>
            </li>
          </ul>
        </div>
        <div class="mt-8 md:mt-0">
          <h2 class="text-2xl">Membership</h2>
          <div class="mt-2">Subscribe or cancel your membership to our services.</div>
          <ul class="mt-2">
            <li>
              <a href="{{ url('account/membership') }}">
                See your membership
                {{ svg('@webroot/icons/chevron-right.svg')|attr({ class: 'w-4 h-4' }) }}
              </a>
            </li>
          </ul>
        </div>
        <div class="mt-8 md:mt-0">
          <h2 class="text-2xl">Account Settings</h2>
          <div class="mt-2">Manage your email, password, credit card, shipping, and billing information.</div>
          <ul class="mt-2">
            <li>
              <a href="{{ url('account/settings#email-password') }}">
                Email and password
                {{ svg('@webroot/icons/chevron-right.svg')|attr({ class: 'w-4 h-4' }) }}
              </a>
            </li>
            <li>
              <a href="{{ url('account/settings#credit-cards') }}">
                Credit cards
                {{ svg('@webroot/icons/chevron-right.svg')|attr({ class: 'w-4 h-4' }) }}
              </a>
            </li>
            <li>
              <a href="{{ url('account/settings#addresses') }}">
                Addresses
                {{ svg('@webroot/icons/chevron-right.svg')|attr({ class: 'w-4 h-4' }) }}
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
{% endblock %}