{# Layout #}
{% extends '_layouts/site' %}

{# Variables #}

{# Blocks #}
{% block content %}
  <!-- Template: {{ _self }}.twig -->

  {# Heading #}
  <div class="px-6 py-12 max-w-xl mx-auto text-center">
    <h1 class="text-3xl mt-0">{{ entry.heading }}</h1>
    {% if entry.subheading %}
      <p class="text-lg text-gray-700">{{ entry.subheading }}</p>
    {% endif %}
  </div>

  {# Cart #}
  <div class="container flex justify-center">
    <div class="border-t border-gray-300 w-full max-w-5xl relative">
      {{ sprig('_includes/components/forms/cart', {
        entryId: entry.id
      }, {
        id: 'cart-sprig',
      }) }}
      <div id="cart-indicator" class="spinner-overlay">
        {% include '_includes/components/spinner' %}
      </div>
    </div>
  </div>
{% endblock %}